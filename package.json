{
  "name": "@s21toolkit/shared",
  "version": "1.4.7",
  "description": "Shared configurations and templates for s21toolkit projects.",
  "main": "config.json",
  "bin": {
    "s21!": "./index.mjs"
  },
  "scripts": {
    "postversion": "git push && git push --tags",
    "release": "npm version -m 'chore(release): %s' --"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s21toolkit/s21shared.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.10.4",
    "typescript": "^5.9.3",
    "tsup": "8.4.0"
  },
  "dependencies": {
    "@tsconfig/node24": "^24.0.3",
    "@tsconfig/strictest": "^2.0.8",
    "cmd-ts": "^0.14.3",
    "mrm-core": "^7.1.22"
  },
  "exports": {
    ".": "./config.json",
    "./tsup": "./tsup/configurations.js",
    "./tsconfig/base.tsconfig.json": "./tsconfig/base.tsconfig.json",
    "./tsconfig/node.tsconfig.json": "./tsconfig/node.tsconfig.json",
    "./tsconfig/tsup.tsconfig.json": "./tsconfig/tsup.tsconfig.json",
    "./tsconfig/dom.tsconfig.json": "./tsconfig/dom.tsconfig.json"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
